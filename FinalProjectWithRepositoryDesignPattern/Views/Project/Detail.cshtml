    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-8">
                <!-- Blog Detail Start -->
                <div class="mb-5">
                    <img class="img-fluid w-100 rounded mb-5" src="~/assets/img/@Model.getDto.Image" alt="">
                    <h1 class="mb-4">@Model.getDto.Name</h1>
                    <p>@Model.getDto.Description</p>
                    <!-- Blog Detail End -->
                    <!-- Comment List Start -->
                    <div class="mb-5">
                        <div class="section-title section-title-sm position-relative pb-3 mb-4">
                            <h3 class="mb-0">@(Model.getDto.Comments.Count) Comments</h3>
                        </div>
                        @for (int i=0;i<Model.getDto.Comments.Count;i++)
                        {
                            <div class="d-flex mb-4">
                                <img src="~/assets/img/@(Model.getDto.Comments[i].AppUser.ProfileImage is null?"avatar.webp":Model.getDto.Comments[i].AppUser.ProfileImage)" class="img-fluid rounded" style="width: 45px; height: 45px;">
                                <div class="ps-3">
                                    <h6><a href="">@Model.getDto.Comments[i].AppUser.UserName</a> <small><i>@Model.getDto.Comments[i].SendedDate</i></small></h6>
                                    <p>
                                        @Model.getDto.Comments[i].Message
                                    </p>
                                    <button class="btn btn-sm btn-light">Reply</button>
                                </div>
                            </div>
                        }ore
                    </div>
                    <!-- Comment List End -->
                    <!-- Comment Form Start -->
                    <div class="bg-light rounded p-5">
                        <div class="section-title section-title-sm position-relative pb-3 mb-4">
                            <h3 class="mb-0">Leave A Comment</h3>
                        </div>
                        <form method="post" asp-controller="Project" asp-action="Comment">
                            <div class="row g-3">
                               
                                <div class="col-12">
                                    <textarea asp-for="@Model.postDto.Comments.FirstOrDefault().Message" class="form-control bg-white border-0" rows="5" placeholder="Comment"></textarea>
                                   <input hidden asp-for="@User.Identity.Name" />
                                    <input hidden asp-for="@Model.postDto.Comments.FirstOrDefault().ProjectId" value="@Model.getDto.Id" />

                                </div>
                                <div class="col-12">
                                    @if(User.Identity.IsAuthenticated) {
                                        <button class="btn btn-primary w-100 py-3" type="submit">Leave Your Comment</button>
                                    } else {
                                        <a class="btn btn-primary w-100 py-3" asp-controller="Account" asp-action="Login">Leave Your Comment</a>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
