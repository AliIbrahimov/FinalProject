@await Component.InvokeAsync("Quote");

<!-- Quote End -->
<!-- Testimonial Start -->
@await Component.InvokeAsync("Testimonial");

<!-- Testimonial End -->
<!-- Blog Start -->
@await Component.InvokeAsync("Projects");

<!-- Blog Start -->
