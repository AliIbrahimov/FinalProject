@using FinalProjectWithRepositoryDesignPattern.DTOs.ChooseUs

@{
    ViewData["Title"] = "Edit";
}
@model ChooseUsEditDto
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly"></div>
        <input hidden asp-for="getDto.Id" />

        <label asp-for="postDto.Name">Title</label>
        <input class="form-control" asp-for="postDto.Name" value="@Model.getDto.Name" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label asp-for="postDto.Title">Title</label>
        <input class="form-control" asp-for="postDto.Title" value="@Model.getDto.Title" placeholder="Enter text">
    </div>
    @for (var i = 0; i < Model.getDto.ChooseUsActions.Count; i++)
    {
        <div class="form-group">
            <label asp-for="postDto.ChooseUsActions[i].Name">Title</label>
            <input class="form-control" asp-for="postDto.ChooseUsActions[i].Name" value="@Model.getDto.ChooseUsActions[i].Name">
        </div>
    }

    <div class="form-group">
        <label asp-for="postDto.FormFile">Title</label>
        <input accept="image/*" class="form-control" asp-for="postDto.FormFile">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

